<%= form_tag conferences_path, :method => :get do %>
  <%= text_field_tag "keyword" %>
  <%= submit_tag "Search" %>
<% end %>

<hr>

<%
  if params[:event_id]
    url = conference_path(@event)
  else
    url = conferences_path
  end
%>
<%= form_for @event, :url => url do |f| %>
  <% if @event.errors.any? %>
    <ul>
      <% @event.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.collection_check_boxes(:group_ids, Group.all, :id, :name) %>

  <% if false %>
    <%= hidden_field_tag "event[group_ids][]", "" %>
    <% Group.all.each do |g| %>
      <%= check_box_tag "event[group_ids][]", g.id, @event.groups.include?(g) %>
      <%= g.name %>
    <% end %>
  <% end %>

  <%= f.label :category_id %>

  <%#= f.collection_select(:category_id, Category.all, :id, :name) %>

  <% Category.all.each do |c| %>
    <%= f.radio_button :category_id, c.id %>
    <%= c.name %>
  <% end %>

  <%= f.label :url %>
  <%= f.url_field :url %>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "送出" %>

<% end %>

<p>
  <%= link_to "id", conferences_path( :sort => "id_asc") %>
  <%= link_to "id desc", conferences_path( :sort => "id_desc") %>
  <%= link_to "attendees_count", conferences_path( :sort => "attendees_count") %>
  <%= link_to "last_registered_at", conferences_path( :sort => "last_registered_at") %>

</p>

<h2>Conference List</h2>

<table>
<% @events.each do |x| %>
  <tr>
    <td><%= link_to x.name, conference_path(x) %></td>
    <td><%= x.category_name %></td>

    <td>
      <%= x.groups.map{ |x| x.name }.join(", ") %>
    </td>
    <td><%= x.url %></td>
    <td><%= link_to "Attendees", conference_attendees_path(x) %>
    <td>
      <%= link_to "Edit", conferences_path( :event_id => x ) %>
    </td>
    <td>
      <%= button_to "Delete", conference_path(x), :method => :delete, :data => { :confirm => "r u sure?" } %>
    </td>
  </tr>
<% end %>
</table>
